# API principal
VITE_API_BASE_URL=http://localhost:3000/api

# Servicio de imágenes (opcional). Si no se define, se reutiliza VITE_API_BASE_URL
VITE_IMAGE_API_BASE_URL=http://localhost:4000/api

# CDN o ruta pública para objetos accesibles sin firma
VITE_CDN_BASE_URL=http://localhost:9000/larmone

# Parámetros para construir URLs públicas hacia el almacenamiento de objetos
VITE_STORAGE_DRIVER=minio
VITE_S3_ENDPOINT=http://localhost:9000
VITE_S3_REGION=us-east-1
VITE_S3_BUCKET=larmone
VITE_S3_PUBLIC_BASE_URL=http://localhost:9000/larmone
VITE_S3_USE_SSL=false

# Estrategia de subida de imágenes: 'presigned' (por defecto) o 'multipart'
VITE_IMAGE_UPLOAD_STRATEGY=presigned
